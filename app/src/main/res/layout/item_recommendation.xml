<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_item_recommendation_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/switch_item_recommendation"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        tools:text="Водочка Грей Гус"/>

    <TextView
        android:id="@+id/tv_item_recommendation_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_item_recommendation_name"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        tools:text="600 руб."/>

    <Switch
        android:id="@+id/switch_item_recommendation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>